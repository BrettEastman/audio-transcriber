{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "audio-transcriber",
  "version": "1.0.0",
  "identifier": "com.brettaustineastman.audio-transcriber",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Transcriber",
        "width": 900,
        "height": 1100,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": false
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["../../backend/dist/main_with_assets"]
  }
}
